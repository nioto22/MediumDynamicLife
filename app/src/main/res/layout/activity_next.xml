<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.NextActivity">

    <FrameLayout
        android:id="@+id/toolbar_fragment"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/next_use_life_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorAccent"
        android:text="USE A LIFE"
        android:textStyle="normal"
        android:textSize="18sp"
        android:gravity="center"
        android:onClick="useLifeButtonCLicked"/>
    <Button
        android:id="@+id/next_main_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@+id/next_use_life_button"
        android:layout_marginTop="46dp"
        android:background="@color/colorAccent"
        android:text="GO TO NEXT ACTIVITY"
        android:textStyle="normal"
        android:textSize="18sp"
        android:gravity="center"
        android:onClick="goToMainActivityClicked"/>
</androidx.constraintlayout.widget.ConstraintLayout>